# Enable URL rewriting
RewriteEngine On

# Block direct access to uploads directory except for authorized scripts
RewriteCond %{REQUEST_URI} ^/uploads/
RewriteCond %{HTTP_REFERER} !^https?://([^.]+\.)?wushusportacademy\.com [NC]
RewriteRule ^uploads/ - [F,L]

# Deny access to sensitive files
<FilesMatch "\.(log|txt|ini|conf|bak|sql|md|env)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# PHP settings
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value max_input_time 300